{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "Node",
    "removeComments": false,
    "baseUrl": "./",
    "paths": {
      "modules/*": ["src/js/modules/*"]
    },
    "lib": ["es2017", "dom"],
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
